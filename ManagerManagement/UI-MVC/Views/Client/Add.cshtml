@model NewClientModel

@{
    ViewBag.Title = "Add Client";
    Layout = "_Layout";
}

<h2>Add Client</h2>

<form asp-controller="Client" asp-action="Add" method="post">
    <div class="mb-3 row">
        <label class="col-sm-2" asp-for="Name"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name">
        </div>
    
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="mb-3 row">
        <label class="col-sm-2" asp-for="BirthDate"></label>
                <div class="col-sm-10">
                    <input asp-for="BirthDate" class="form-control" type="text" placeholder="dd/MM/yyyy">
                </div>
        <span asp-validation-for="BirthDate" class="text-danger"></span>
        
    </div>
    
    <div class="mb-3 row">
        <label class="col-sm-2" asp-for="Email"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Email">
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    
    <div class="mb-3 row">
        <label class="col-sm-2" asp-for="ManagerId"></label>
        <div class="col-sm-10">
    
            <input class="form-control" asp-for="ManagerId">
        </div>
        <span asp-validation-for="ManagerId" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Add</button>
    
</form>


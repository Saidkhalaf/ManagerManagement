
@model NewManagerModel

@{
    ViewBag.Title = "Add Manager";
    Layout = "_Layout";
}

<h2>Add Manager</h2>

<form asp-controller="DeveloperManager" asp-action="Add" method="post">
    <div class="mb-3 row">
        <label class="col-sm-2" asp-for="Id"></label>
        <div class="col-sm-10">

            <input class="form-control" asp-for="Id">
        </div>
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-2" asp-for="Name"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name">
        </div>

        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-2" asp-for="Department"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Department">

        </div>
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-2" asp-for="ProjectStatus"> </label>
        <div class="col-sm-10">
            <select asp-for="ProjectStatus" asp-items="@(new SelectList(Enum.GetValues<ProjectStatus>()))" class="form-control">
            </select>
        </div>
        <span asp-validation-for="ProjectStatus" class="text-danger"></span>
    </div>


    <div class="mb-3 row">
        <label class="col-sm-2" asp-for="HireDate"></label>
        <div class="col-sm-10">
            <input asp-for="HireDate" class="form-control" type="text" placeholder="dd/MM/yyyy">
        </div>
        <span asp-validation-for="HireDate" class="text-danger"></span>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-2" asp-for="Salary"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Salary" type="number">
        </div>
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    
    <div class="mb-3 row">
            <label class="col-sm-2" asp-for="Email"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Email">
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    
        <div class="mb-3 row">
            <label class="col-sm-2" asp-for="Password"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Password" type="password">
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

    <button type="submit" class="btn btn-primary">Add</button>
</form>
